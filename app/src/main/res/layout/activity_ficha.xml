<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ficha">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nome_ficha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imagem_ficha"
            android:layout_width="match_parent"
            android:layout_height="50pt"
            android:layout_marginTop="10pt"
            app:srcCompat="@drawable/vilao" />

        <TextView
            android:id="@+id/arquetipo_ficha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/poderes_ficha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:text="TextView"
            android:textSize="20sp" />

        <Button
            android:id="@+id/editar_ficha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:backgroundTint="#000"
            android:text="Editar Ficha" />

        <Button
            android:id="@+id/fechar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80pt"
            android:layout_marginTop="90pt"
            android:layout_marginRight="10pt"
            android:backgroundTint="#000"
            android:text="Fechar aplicativo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>