<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10pt"
    android:layout_marginRight="10pt"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:layout_marginTop="20pt"
            app:srcCompat="@drawable/_52026_icones_planas_de_super_heroi_vetor" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30pt"
            android:text="Gerador de Ficha de Herói"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/nome_heroi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:ems="10"
            android:hint="Nome do seu herói"
            android:inputType="text"
            android:textAlignment="center" />

        <Button
            android:id="@+id/gerar_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:backgroundTint="#000"
            android:text=" Gerar Perfil" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>